<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<RepositoryRoot Condition="'$(RepositoryRoot)' == ''">$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), 'Repository.props'))</RepositoryRoot>
		<NuGetBuildRoot>$(MSBuildThisFileDirectory)\..\tools</NuGetBuildRoot>
	</PropertyGroup>

	<!-- Locate and import the repository props -->
	<Import Project="$(RepositoryRoot)\Repository.props" />

	<!-- Import the build properties -->
	<Import Project="$(NuGetBuildRoot)\NuGet.Services.Build.props" />
</Project>